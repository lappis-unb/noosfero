<%= block_title(block.title) %>
<% block.all_groups.each do |group|%>
  <div class="work-assignment-content">
    <div class="work-assignment-header-list-block">
      <h2><%= link_to group.name, group.url %></h2>
      <div>
          <%= group.abstract %>
      </div>
        <div class="work-assignment-group-date">
          <%= show_period(group.start_date, group.end_date).capitalize %>
        </div>
    </div>
    <div class="work-assignment-list-block">
      <p class="work-assignment-title">
        <%= _("Work Assignment List") %>
      </p>
      <% group.work_assignment_list.last(block.limit).each do |work| %>
        <div class="work-assignment-list-content" id="work-assignment-<%= work.status %>">
          <div class="work-assignment-list-name">
            <%= work.name %>
          </div>
          <div class="work-assignment-list-actions">
            <%= button_without_text :eyes, _('View'), work.url %>
          </div>
          <div class="work-assignment-list-date">
            <strong><%= _('From ') %></strong>
            <%= show_time(work.begining, true) %>
            <strong><%= _('to ') %></strong>
            <%= show_time(work.ending, true) %>
          </div>
        </div>
      <% end %>
      <div class="block-footer-content">
      <%= link_to _("View All"), {:controller => 'work_assignment_plugin_myprofile', :action => 'work_assignment_list', :type => 'WorkAssignmentPlugin::WorkAssignment', :work_assignment_group => group}%>
      </div>
    </div>
  </div>
<% end %>
<br style="clear: both;"/>
